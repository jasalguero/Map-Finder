<div>
  <header class="navbar navbar-fixed-top" id="header">
    <div class="navbar-inner">
      <div class="container-fluid">
        <div class="brand">
          <h4>Map Locator for folks at WayMate</h4>
        </div>
      </div>
    </div>
  </header>
  <div class="container-fluid" id="main">
    <div class="row-fluid">
      <div id="errorMsg" class="alert alert-error" style="display:none">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <span id="errorText">Ops, something wrong happened :( </span>
      </div>
      <div id="successMsg" class="alert alert-success" style="display:none">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <span>Found it!!</span>
      </div>
    </div>
    <div class="row-fluid">
      <div>
        <div class="span3">
          <div class="well sidebar-nav">
            <span class="nav-header"><h3>MENU</h3></span>
            <ul class="nav nav-list">
              <li>
                  <strong>Create new Marker</strong>
                  <br/>
                  <form>
                    <input type="text" id="marker_location" placeholder="search for something..." {{action "addMarker" on="onSubmit"}}>
                    <br/>
                    <input type="submit" value="Find" {{action "addMarker" on="click"}}/>
                  </form>
              </li>
              <li><strong>Browser other Markers</strong></li>
            </ul>
          </div>
        </div>
        <div class="span9">
          {{outlet}}
        </div>
      </div>
    </div>
  </div>
</div>
